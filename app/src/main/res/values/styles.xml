<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/px40dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textTitle_colorPrimary">
        <item name="android:textSize">@dimen/px44dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="textTitle_ffffff">
        <item name="android:textSize">@dimen/px44dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/C7</item>
    </style>

    <style name="textItem_666666">
        <item name="android:textSize">@dimen/px40dp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="textItem_ffffff">
        <item name="android:textSize">@dimen/px40dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="textItem_colorPrimary">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/px40dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>
