<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/px24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_radius_ffffff"
        android:orientation="horizontal"
        android:padding="@dimen/px24dp">

        <LinearLayout
            android:layout_width="@dimen/px240dp"
            android:layout_height="@dimen/px240dp">

            <ImageView
                android:id="@+id/re_go_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px24dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/textItem_colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名称: " />

                <TextView
                    android:id="@+id/re_go_mc"
                    style="@style/textItem_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="指甲刀" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/textItem_colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量: " />

                <TextView
                    android:id="@+id/re_go_sl"
                    style="@style/textItem_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="指甲刀" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/textItem_colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评分: " />

                <TextView
                    android:id="@+id/re_go_pf"
                    style="@style/textItem_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="指甲刀" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/textItem_colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注: " />

                <TextView
                    android:id="@+id/re_go_bz"
                    style="@style/textItem_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刀指甲刀指甲刀指甲刀指甲刀指甲" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
