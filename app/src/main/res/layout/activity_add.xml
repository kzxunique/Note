<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/C6"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/px44dp">

            <TextView
                android:id="@+id/sub_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px44dp"
                android:gravity="center_vertical"
                android:text="2020年05月25日"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/px42dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_radius_ffffff"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sub_img"
                    android:layout_width="@dimen/px390dp"
                    android:layout_height="@dimen/px394dp"
                    android:background="@drawable/xc"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="@dimen/px1dp"
                    android:layout_height="match_parent"
                    android:background="@color/C6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px130dp">

                        <TextView
                            android:layout_width="@dimen/px200dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/px60dp"
                            android:text="名称"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/px42dp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="@dimen/px1dp"
                            android:layout_height="match_parent"
                            android:background="@color/C6" />

                        <jcx_092217107.xx.note.base.utils.ClearEditText
                            android:id="@+id/sub_ed_xm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="物品名称"
                            android:paddingLeft="@dimen/px24dp"
                            android:paddingRight="@dimen/px24dp"
                            android:textSize="@dimen/px42dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px1dp"
                        android:background="@color/C6" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px130dp">

                        <TextView
                            android:layout_width="@dimen/px200dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/px60dp"
                            android:text="数量"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/px42dp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="@dimen/px1dp"
                            android:layout_height="match_parent"
                            android:background="@color/C6" />

                        <jcx_092217107.xx.note.base.utils.ClearEditText
                            android:id="@+id/sub_ed_xl"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="数量"
                            android:inputType="phone"
                            android:paddingLeft="@dimen/px24dp"
                            android:paddingRight="@dimen/px24dp"
                            android:textSize="@dimen/px42dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px1dp"
                        android:background="@color/C6" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px130dp">

                        <TextView
                            android:layout_width="@dimen/px200dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/px60dp"
                            android:text="评分"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/px42dp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="@dimen/px1dp"
                            android:layout_height="match_parent"
                            android:background="@color/C6" />

                        <jcx_092217107.xx.note.base.utils.ClearEditText
                            android:id="@+id/sub_ed_xb"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="重要性评分"
                            android:inputType="phone"
                            android:paddingLeft="@dimen/px24dp"
                            android:paddingRight="@dimen/px24dp"
                            android:textSize="@dimen/px42dp" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px20dp"
                android:background="@color/C6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_radius_ffffff"
                android:orientation="vertical"
                android:padding="@dimen/px24dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/px14dp"
                        android:gravity="center"
                        android:text="分类盒子"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/px42dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/sub_ed_addhz"
                        android:layout_width="@dimen/px70dp"
                        android:layout_height="@dimen/px70dp"
                        android:background="@drawable/icon_radius_2577e3_200dp"
                        android:src="@drawable/add" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/sub_ed_re"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px20dp"
                android:background="@color/C6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_radius_ffffff"
                android:orientation="vertical"
                android:padding="@dimen/px24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="位置备注"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/px42dp"
                    android:textStyle="bold" />

                <jcx_092217107.xx.note.base.utils.ClearEditText
                    android:id="@+id/sub_ed_dz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px12dp"
                    android:layout_weight="1"
                    android:background="@drawable/icon_radius_c4"
                    android:gravity="top"
                    android:hint="请填存放物品位置,或备注"
                    android:minLines="3"
                    android:padding="@dimen/px24dp"
                    android:textColor="@color/C7"
                    android:textColorHint="@color/C6"
                    android:textSize="@dimen/px42dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/sub_ed_ok"
        style="@style/textTitle_ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px130dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="提 交" />
</LinearLayout>